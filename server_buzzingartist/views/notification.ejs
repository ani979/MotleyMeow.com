<ul class="notification_dropdown">
  <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  <% 
                                        if(typeof recentPostsForArtist != 'undefined' && recentPostsForArtist.length != 0) { %>
                                    <span class="label"><%= recentPostsForArtist.length %></span>
                                    <%}%>
                                    <i class="nav-icon fa fa-bullhorn"></i>
                                    <span class="small-screen-text">Notifications</span>
                                </a>

                                <!-- NOTIFICATIONS -->
                                
                                <div class="dropdown-menu widget-notifications no-padding" style="width: 400px">
                                    <div class="notifications-list" id="main-navbar-notifications">

                                        <table id="postsTable" class="table table-striped">
                                          <%  if(typeof recentPostsForArtist != 'undefined' && recentPostsForArtist.length != 0) { %>
                                              <thead>
                                                  <tr>
                                                      <th class ="titlecol" style="text-align:left">Looking for</th>
                                                      <th class ="contribcol" style="text-align:left">artists required</th>
                                                      <th class ="citycol" style="text-align:left">in the city</th>
                                                      <th class ="fbprofilecol" style="text-align:left">Details</th>          
                                                  </tr>
                                              </thead>
                                          <% } %>
                                      <tbody class="searchablewe">
                                        
                                        <% 
                                        if(typeof recentPostsForArtist == 'undefined' || recentPostsForArtist.length == 0) { %>
                                          <tr> <td colspan="4">No New Notifications. SEE OLD NOTIFICATIONS <a href = "/viewNotificationPosts">here</a></td></tr>

                                        <%}  else { %>
                                                <% for(var i=0; i < recentPostsForArtist.length; i++) { %>
                                                  <tr rel="tooltip" title="<%= recentPostsForArtist[i].post.postDetail%>">
                                                  <td><%= recentPostsForArtist[i].post.postTitle %></td>
                                                  <td><%= recentPostsForArtist[i].post.role %></td>
                                                  <td><%= recentPostsForArtist[i].post.city %></td>
                                                  
                                                        <td><a href="/viewpost?postid=<%=recentPostsForArtist[i]._id%>" id ="view" name="<%=recentPostsForArtist[i]._id%>"> <span class="glyphicon glyphicon-info-sign"></span></a></td>
                                                        <input id="_id<%=recentPostsForArtist[i]._id%>" name="_id"  type="hidden" value=<%=recentPostsForArtist[i].post.userid%>>
                                                        <input id="_postid<%=recentPostsForArtist[i]._id%>"  type="hidden" value=<%=recentPostsForArtist[i]._id%>>
                                                   
                                                  </tr>
                                                <% } %>
                                           <%}%>     
                                          
                                          
                                          
                                      </tbody>
                                    </table>
                                    </div> <!-- / .notifications-list -->
                                    <%  if(typeof recentPostsForArtist != 'undefined' && recentPostsForArtist.length != 0) { %>
                                      <a href="/viewNotificationPosts" class="notifications-link">SEE ALL NOTIFICATIONS</a>
                                    <% } %>
                                </div> <!-- / .dropdown-menu -->
                            </li>
                          </ul>


<script type="text/javascript">
$(document).ready(function(){
          $(".notification_dropdown .dropdown").on("show.bs.dropdown", function(e){
                    console.log("SHOW DROPDOWNNNNNNNNNNNN");
                    <% if(typeof recentPostsForArtist != 'undefined') { %>
                      console.log("recentPostsForArtist.length: "+ <%= recentPostsForArtist.length %>);
                 <%}%>
              <% if(typeof recentPostsForArtist != 'undefined' && recentPostsForArtist.length != 0) { %>
                  $.ajax({
                        url: "/saveNotificationClickDate",
                        type: "POST",
                        success: function (data) {
                          console.log("SUCCESSSS DROPDOWN");
                        },
                        error: function (data) {
                          console.log("some error " + data);
                        }
                        
                  });
              <%}%>
            
          });
          $(".notification_dropdown .dropdown").on("hide.bs.dropdown", function(e){
            console.log("HIDE DROPDOWNNNNNNNNNNNN");
            <% if(typeof recentPostsForArtist != 'undefined') { %>
                      console.log("recentPostsForArtist.length: "+ <%= recentPostsForArtist.length %>);
                 <%}%>
            <% if(typeof recentPostsForArtist != 'undefined' && recentPostsForArtist.length != 0) { %>
              $("#notification").load("/getNotification");
            <%}%>
          });
        });
</script>